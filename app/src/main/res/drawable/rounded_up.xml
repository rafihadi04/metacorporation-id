<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- we define background color -->
    <solid android:color="@color/pallet_gray" />

    <!-- we define border color and thick -->
    <!--<stroke
        android:width="3dp"
        android:color="#5b8bc7" />-->

    <!-- add some padding for text inside -->
    <padding
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp" />

    <!-- we define corner radius, note that radius can be different for each corner -->
    <corners
        android:topLeftRadius="@dimen/bottom_nav_bar_radius"
        android:topRightRadius="@dimen/bottom_nav_bar_radius"/>

</shape>